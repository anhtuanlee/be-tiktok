{
  "name": "be-tiktok",
  "description": "",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start-ts": "nodemon --exec ts-node src/server.ts",
    "clean": "rimraf dist",
    "build": "tsc",
    "watch:build": "tsc --watch",
    "watch:server": "cross-env nodemon './dist/server.js' --watch './dist'",
    "start": "npm-run-all clean build --parallel watch:build watch:server --print-label",
    "tslint:check": "tslint -c tslint.json './src/**/*.{js,ts,tsx}'",
    "prettier": "prettier --write ./src/**/*.{js,ts,tsx,scss}",
    "prettier:check": "prettier --list-different ./src/**/*.{js,ts,tsx,scss}",
    "npm run check:tsv": "tsc --noEmit",
    "eslint": "eslint --ext js,ts,tsx",
    "lint:fix": "yarn run eslint --fix src",
    "lint:css": "stylelint src/**/*.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nc-minh/be-tiktok.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nc-minh/be-tiktok/issues"
  },
  "homepage": "https://github.com/nc-minh/be-tiktok#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "express": "^4.18.1",
    "express-winston": "^4.2.0",
    "helmet": "^5.1.0",
    "jsonwebtoken": "^8.5.1",
    "nocache": "^3.0.4",
    "ts-node": "^10.8.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@typescript-eslint/parser": "^5.28.0",
    "eslint": "^8.17.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.1",
    "nodemon": "^2.0.16",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.0",
    "rimraf": "^3.0.2",
    "tsc-watch": "^5.0.3",
    "tslint": "^6.1.3",
    "typescript": "^4.7.3"
  },
  "postinstall": "husky install",
  "pre-commit": [
    "lint:fix"
  ]
}
